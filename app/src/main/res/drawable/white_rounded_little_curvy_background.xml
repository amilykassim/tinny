<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid android:color="@color/greyColor"/>
            <stroke android:color="@color/blackColor"
                android:width="1dp"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/whiteColor"/>
            <stroke android:color="@color/greyColor"
                android:width="1dp"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

</selector>