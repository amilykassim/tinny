<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:background="@color/whiteColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/whiteColor"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                app:civ_border_color="@color/irishColor"
                app:civ_border_width="1dp"
                android:layout_below="@id/relLayout0"
                android:src="@drawable/ic_person_light"
                android:layout_centerHorizontal="true"
                android:id="@+id/profileImage"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- ////////////// USERNAMES AND COURSES TAKEN /////////////////////////-->
            <LinearLayout
                android:id="@+id/relLayout1"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_below="@id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- ************ Username section **************-->
                <RelativeLayout
                    android:layout_weight="50"
                    android:layout_width="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/username_edit_profile"
                        android:textColor="@color/blackColor"
                        android:textSize="17sp"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>

                <!-- the middle line -->
                <View
                    android:background="@color/greyColor"
                    android:layout_marginTop="40dp"
                    android:layout_width="2dp"
                    android:layout_height="30dp"/>


                <!-- ************ display name section **************-->
                <RelativeLayout
                    android:layout_weight="50"
                    android:layout_marginTop="30dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/display_name_edit_profile"
                        android:textSize="17sp"
                        android:textColor="@color/blackColor"
                        android:layout_centerVertical="true"
                        android:textAlignment="center"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp" />

                </RelativeLayout>

            </LinearLayout>


            <!-- ///////////////////  SKILLS AND INTERESTS //////////////////////// -->
            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_below="@id/relLayout1"
                android:background="@drawable/white_grey_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- Description -->
                    <TextView
                        android:text="Skills / Interests: "
                        android:textColor="@color/darkGreyColor"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/description_edit_profile"
                        android:textSize="17sp"
                        android:textColor="@color/blackColor"
                        android:paddingBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>


            <!-- //////////////////////// COURSES TAKEN //////////////////////// -->

            <RelativeLayout
                android:id="@+id/relLayout3"
                android:background="@drawable/white_grey_border_bottom"
                android:layout_marginBottom="50dp"
                android:layout_below="@id/relLayout2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">

                    <!-- Description -->
                    <TextView
                        android:text="Courses taken: "
                        android:textColor="@color/darkGreyColor"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/courses_taken"
                        android:textSize="17sp"
                        android:textColor="@color/blackColor"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>
</merge>