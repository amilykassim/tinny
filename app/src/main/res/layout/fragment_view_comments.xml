<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".utils.ViewCommentsFragment">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/relLayout1_comment_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_comments_layout"/>
    </RelativeLayout>

    <!-- Middle Section -->
    <RelativeLayout
        android:layout_below="@id/relLayout1_comment_fragment"
        android:layout_above="@id/relLayout3_comment_fragment"
        android:id="@+id/relLayout2_comment_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/loadingLayout"
            android:orientation="vertical"
            android:background="@color/whiteColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

    <!-- bottom section -->
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/relLayout3_comment_fragment"
        android:background="@drawable/white_rounded_button_background"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:padding="2dp"
            android:background="@null"
            android:layout_marginRight="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/comment_profileImage"
            android:layout_toEndOf="@id/comment_profileImage"
            android:hint="Add a comment..."
            android:textSize="17sp"
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/checkmark_comment"
            android:src="@drawable/ic_check_mark"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="16dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/comment_profileImage"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </RelativeLayout>

</RelativeLayout>