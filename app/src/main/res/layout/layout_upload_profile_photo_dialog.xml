<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#68ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:weightSum="100"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/cancel_btn_dialog"
                        android:text="Discard"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/blackColor"
                        android:textSize="22sp"
                        android:textAllCaps="false"
                        android:background="@drawable/white_square_button_background"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="60dp" />

                    <Button
                        android:id="@+id/send_offer_btn_dialog"
                        android:text="Yep! Upload"
                        android:textSize="22sp"
                        android:textAllCaps="false"
                        android:textColor="@color/whiteColor"
                        android:background="@drawable/blue_square_button_background"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:layout_height="60dp" />

                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    android:id="@+id/selectedImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtclose"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:textColor="@color/blackColor"
                    android:text="X"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:background="@drawable/white_rounded_button_background"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>