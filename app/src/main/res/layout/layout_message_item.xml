<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_relative_layout"
    android:layout_marginBottom="5dp"
    android:background="@drawable/white_skinny_grey_border_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="3dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <RelativeLayout
        android:id="@+id/relLayoutParent"
        android:background="@drawable/parent_background"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/profileImage"
        android:layout_toEndOf="@id/profileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/relLayout_check_marks"
            android:layout_below="@id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- GREY CHECK MARKS -->
            <RelativeLayout
                android:id="@+id/relLayout_grey_check_marks"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="28dp">

                <ImageView
                    android:src="@drawable/ic_check_mark_grey"
                    android:layout_width="19dp"
                    android:layout_height="19dp" />

                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/ic_check_mark_grey"
                    android:layout_width="19dp"
                    android:layout_height="19dp" />
            </RelativeLayout>


            <!-- BLUE CHECK MARKS -->
            <RelativeLayout
                android:id="@+id/relLayout_blue_check_marks"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="28dp">

                <ImageView
                    android:src="@drawable/ic_check_mark"
                    android:layout_width="19dp"
                    android:layout_height="19dp" />

                <ImageView
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/ic_check_mark"
                    android:layout_width="19dp"
                    android:layout_height="19dp" />
            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/message_v_all_messages"
            android:textColor="@color/lightBlackColor"
            android:textSize="15sp"
            android:layout_toRightOf="@id/relLayout_check_marks"
            android:layout_toEndOf="@id/relLayout_check_marks"
            android:layout_below="@id/username"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingBottom="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_time_v_all_messages"
            android:textColor="@color/darkGreyColor"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ic_new_message"
            android:visibility="gone"
            android:layout_below="@id/message_time_v_all_messages"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/new_message_icon"
            android:layout_width="10dp"
            android:layout_height="10dp" />

    </RelativeLayout>

</RelativeLayout>