<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_relative_layout"
    android:layout_marginLeft="50dp"
    android:layout_marginStart="50dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/profile_image_right_layout"
        android:layout_width="40dp"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/right_message_textview"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        android:layout_toLeftOf="@id/relLayout_check_marks"
        android:layout_toStartOf="@id/relLayout_check_marks"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/relLayout_check_marks"
        android:layout_toLeftOf="@id/profile_image_right_layout"
        android:layout_toStartOf="@id/profile_image_right_layout"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- GREY CHECK MARKS -->
        <RelativeLayout
            android:id="@+id/relLayout_grey_check_marks"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="20dp">

            <ImageView
                android:src="@drawable/ic_check_mark_grey"
                android:layout_width="19dp"
                android:layout_height="19dp" />

            <ImageView
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_check_mark_grey"
                android:layout_width="19dp"
                android:layout_height="19dp" />
        </RelativeLayout>


        <!-- BLUE CHECK MARKS -->
        <RelativeLayout
            android:id="@+id/relLayout_blue_check_marks"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="20dp">

            <ImageView
                android:src="@drawable/ic_check_mark"
                android:layout_width="19dp"
                android:layout_height="19dp" />

            <ImageView
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_check_mark"
                android:layout_width="19dp"
                android:layout_height="19dp" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>