<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    tools:context=".utils.ReportFragment">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/relLayout1_report_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_report_layout"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout2_report_fragment"
        android:background="@drawable/white_rounded_little_curvy_background"
        android:layout_below="@id/relLayout1_report_fragment"
        android:layout_margin="10dp"
        android:padding="16sp"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <EditText
            android:id="@+id/report_problem_edit_text"
            android:background="@null"
            android:hint="Report a problem..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <Button
        android:id="@+id/submit_report_fragment"
        android:text="Submit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@id/relLayout2_report_fragment"
        android:background="@drawable/background_sign_up_btn"
        android:textColor="@color/whiteColor"
        android:layout_width="120dp"
        android:layout_height="40dp" />

</RelativeLayout>